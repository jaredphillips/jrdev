<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>


  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 10 %>
  </div>

  <div class="field">
    <%= f.label :url, "Long form URL" %><br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :source, "The source of the article shorted for presentation" %><br>
    <%= f.text_field :source %>
  </div>
  
  <div class="field">
    <%= f.label :twitter_info, "Headline followed by | bit.ly link" %><br>
    <%= f.text_field :twitter_info %>
  </div>

  <div class="field">
    <%= f.label :promoted %><br>
    <%= f.check_box :promoted %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

