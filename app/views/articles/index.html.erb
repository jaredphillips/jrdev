<div class="wrapper">
  <aside>
    <header>
      <h1>the junior developer</h1>
      <h3>all the resources, articles and information you need</h3>
    </header>
  </aside>
  <section>
    <% @articles.each do |article| %>
      <div class="article-container">
        <h2>
          <%= link_to article.title, article.url, target: "_blank" %>
        </h2>
        <p>
          <%= article.description %>
        </p>
        <ul class="tags">
          <li>
            <%= raw article.tag_list.map { |tag| link_to tag, tag_path(tag)}.join(' ') %>
          </li>
        </ul>
      </div>
    <% end %>
  </section>
</div>


